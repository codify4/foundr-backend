generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement()) @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  email String @unique
  username String @unique
  hash String
  hashedRt String?

  page Page[]
}

model Page {
  id Int @id @default(autoincrement()) @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  image String
  name String
  bio String
  socials SocialLink[]
  projects Project[]

  userId Int
  user User @relation(fields: [userId], references: [id])
}

model SocialLink {
  id Int @id @default(autoincrement()) @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  type String
  link Socials

  pageId Int
  page Page @relation(fields: [pageId], references: [id])
}

model Project {
  id Int @id @default(autoincrement()) @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  name String
  description String
  url String

  pageId Int
  page Page @relation(fields: [pageId], references: [id])
}

enum Socials {
  twitter
  instagram
  facebook
  linkedin
  github
  website
}